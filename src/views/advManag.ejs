                        </tr>
                    </thead>
                    <tbody>



                        


                        <%for(let i = 0 ; i < data.length ; i++){%>
                        
                        
                        <tr class="<%= !data[i].published?"bg-success":""%>" >
                                <td scope="row"><%=i+1%></th>
                                    
                                    <td style="display: none" class="advID"><%= data[i].id%></a></td>
                                    <td style="display: none" class="userID"><%= data[i].userID%></td>
                                    <td class="countryName"><%=data[i].country%></td>
                                    <td class="cityName"><%=data[i].city%></td>
                                    <td class="district"><%=data[i].district%></td>
                                    <td class="pCode"><%=data[i].postalCode%></td>
                                    <td class="addr1"><%=data[i].address1%></td>
                                    <td class="addr"><%=data[i].date%></td>
                                    <td class="edit "><a class="ccc" href="/admin/advEdit/<%=data[i].id%>">Edit</a></td>
                        </tr>
                        
                        <%}%>
