













  <div class="ftco-blocks-cover-1">
    <div class="site-section-cover overlay" data-stellar-background-ratio="0.5"
      style="background-image: url('/images/hero_1.jpg')">
      <div class="container">
        <div class="row align-items-center justify-content-center text-center">
          <div class="col-md-7">
            <br> <br> <br>
            <h1 class="mb-2">Register</h1>
            <br>
            <h4 class="text-white">Please register to be able to contact the agent resonsible for this advertisement.
            </h4>
            <br>



            <form action="/register" method="post" enctype="multipart/form-data">

              <div class="form-group row">
                <div class="col-md-6">
                  <input type="text" class="form-control" placeholder="First Name" id="firstNamee" name="firstName">
                </div>

                <div class="col-md-6">
                  <input type="text" class="form-control" placeholder="Last Name" id="lastNamee" name="lastName">
                </div>

              </div>





              <div class="form-group row">
                <div class="col-md-6">
                  <input type="date" class="form-control" placeholder="Date of Birth" id="dateOfBirthee"
                    name="dateOfBirth">
                </div>

                <div class="col-md-6">
                  <input type="email" class="form-control" placeholder="email" id="emailee" name="email">
                </div>



              </div>


              <div class="form-group row">
                <div class="col-md-6">
                  <input type="number" class="form-control" placeholder="Mobile" id="mobileee" name="mobile">
                </div>

                <div class="col-md-6">
                  <input type="text" class="form-control" placeholder="Address" id="adressee" name="address">
                </div>
              </div>



              <div class="form-group row">
                <div class="col-md-6">
                  <input type="password" class="form-control" placeholder="Password" id="passwordee" name="password">
                </div>

                <div class="col-md-6">
                  <input type="password" class="form-control" placeholder="Re-Password" id="RePasswordee"
                    name="Re-Password">
                </div>
              </div>





              <div class="form-group row">
                <div class="col-md-4"><img class="img-thumbnail" id="profile-img-tag" src=""
                    style="width:100px;height:100px"></div>
                <label class="col-md-4 control-label text-white" for="profile-img">Profile Photo</label>
                <div class="col-md-4">

                  <!-- this is the config of the multer in ejs -->
                  <input id="profile-img" class="text-white" name="file" type="file">
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group row">
                  <div class="col-md-12 mr-auto">
                    <%if(type){%>
                    <input type="submit" class="btn btn-block btn-primary text-white py-3 px-5" value="ADD">
                    <%}else{%>
                    <input type="submit" class="btn btn-block btn-primary text-white py-3 px-5" value="Sign up">
                    <%}%>


                    </div>
                  </div>

                 



                </div>


              </form>









            </div>
          </div>
        </div>
      </div>
    </div>




    
 






 